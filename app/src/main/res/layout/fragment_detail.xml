<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <TextView
        android:id="@+id/tv_news_id"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="{ID}"
        android:layout_marginRight="6dp"
        android:layout_marginEnd="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_news_title"
        android:text="{TITLE}"
        android:layout_marginLeft="6dp"
        android:layout_marginStart="6dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/tv_news_id"
        android:layout_toEndOf="@+id/tv_news_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_news_summary"
        android:layout_below="@+id/tv_news_id"
        android:text="{SUMMARY}"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_news_content"
        android:layout_below="@+id/tv_news_summary"
        android:text="{CONTENT}"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>